# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Multiagent Dev Platform - Environment Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━ LOCAL LLM (Ollama) ━━━
# The platform runs LOCALLY by default using Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ━━━ VECTOR DATABASE (Qdrant) ━━━
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=multiagent_memory

# ━━━ RELATIONAL DATABASE (PostgreSQL) ━━━
DATABASE_URL=postgresql://multiagent:multiagent_dev_2024@localhost:5432/multiagent

# ━━━ ORCHESTRATOR API ━━━
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# ━━━ WEB UI ━━━
NEXT_PUBLIC_API_URL=http://localhost:8000

# ━━━ SECURITY ━━━
SECRET_KEY=change_this_to_a_random_secret_key_in_production
OFFLINE_ONLY_MODE=false

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# EXTERNAL AI PROVIDERS (FALLBACK ONLY - USE SPARINGLY)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# These are ONLY used when:
# 1. Local LLM lacks specific knowledge
# 2. RAG memory returns insufficient context
# 3. Agent explicitly justifies the need
# 4. Call is approved and audited

# ━━━ Anthropic Claude ━━━
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_ENABLED=false
ANTHROPIC_MAX_TOKENS_PER_DAY=100000

# ━━━ OpenAI ChatGPT ━━━
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ENABLED=false
OPENAI_MAX_TOKENS_PER_DAY=100000

# ━━━ Google Gemini ━━━
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro
GOOGLE_ENABLED=false
GOOGLE_MAX_TOKENS_PER_DAY=100000

# ━━━ OpenRouter ━━━
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3-opus
OPENROUTER_ENABLED=false
OPENROUTER_MAX_TOKENS_PER_DAY=50000

# ━━━ EXTERNAL AI POLICY ━━━
REQUIRE_APPROVAL_FOR_EXTERNAL_AI=true
CACHE_EXTERNAL_AI_RESPONSES=true
LOG_ALL_EXTERNAL_AI_CALLS=true
MAX_EXTERNAL_AI_COST_PER_MISSION_USD=5.00
